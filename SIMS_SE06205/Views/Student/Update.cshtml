@model SIMS_SE06205.Models.StudentViewModel

@{
    ViewData["title"] = "Update Student";
    Layout = "~/Views/Shared/_MainLayout.cshtml";

    var isMaleChecked = Model.Gender == "Male" ? "checked" : "";
    var isFemaleChecked = Model.Gender == "Female" ? "checked" : "";
    var classList = ViewBag.ClassList as List<SelectListItem>;
}

<div class="row">
    <div class="col col-sm-12 col-md-12 p-3">
        <div class="card">
            <div class="card-header">
                <h5>Update Student</h5>
            </div>
            <div class="card-body">
                <form enctype="multipart/form-data" asp-action="Update" method="post">
                    <div class="form-group mb-3">
                        <label asp-for="NameStudent" class="control-label"></label>
                        <input asp-for="NameStudent" class="form-control" />
                        <span asp-validation-for="NameStudent" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Code" class="control-label">Code</label>
                        <input asp-for="Code" class="form-control" />
                        <span asp-validation-for="Code" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Major" class="control-label">Major</label>
                        <select asp-for="Major" class="form-control" asp-items="@(new SelectList(ViewBag.CourseList, "Value", "Text"))">
                            <option value="">-- Select Major --</option>
                        </select>
                        <span asp-validation-for="Major" class="text-danger"></span>
                    </div>
                    @* <div class="form-group mb-3">
                        <label asp-for="Class" class="control-label">Class</label>
                        <select asp-for="Class" class="form-control" asp-items="@(new SelectList(classList, "Value", "Text"))">
                            <option value="">-- Select Class --</option>
                        </select>
                        <span asp-validation-for="Class" class="text-danger"></span>
                    </div> *@
                    <div class="form-group mb-3">
                        <label class="control-label">Gender</label>
                        <div>
                            <input type="radio" name="Gender" value="Male" @isMaleChecked /> Male
                            <input type="radio" name="Gender" value="Female" @isFemaleChecked /> Female
                            <span asp-validation-for="Gender" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Adress" class="control-label">Address</label>
                        <input asp-for="Adress" class="form-control" />
                        <span asp-validation-for="Adress" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Class" class="control-label">Class</label>
                        <select asp-for="Class" class="form-control" asp-items="@(new SelectList(classList, "Value", "Text"))">
                            <option value="">-- Select Class --</option>
                        </select>
                        <span asp-validation-for="Class" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-primary">Save</button>
                        <a class="btn btn-info" href="@Url.Action("Index", "Student")">Back to List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


